{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "isolatedModules": true,
    "paths": {
      "@components": [
        "lib/components/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@views/*": [
        "lib/views/*"
      ],
      "@enums/*": [
        "lib/domain/enums/*"
      ],
      "@interfaces": [
        "lib/domain/interfaces"
      ],
      "@constants/*": [
        "lib/domain/constants/*"
      ],
      "@hooks/*": [
        "lib/utils/hooks/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@providers/*": [
        "lib/providers/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    "functions"
  ]
}